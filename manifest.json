{
  "name": "YTease",
  "version": "0.1.0",
  "description": "Youtube controls made easy ðŸš€ Play faster than 2x now.",
  "permissions": ["tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
       "assets/icon16.png",
       "assets/icon32.png",
       "assets/icon48.png",
       "assets/icon128.png"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "icons": {
    "48": "assets/icon48.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "default_title": "YTease",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
